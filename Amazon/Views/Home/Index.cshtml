@{
    ViewData["Title"] = "Home Page";
}
@model BooksViewModel



@foreach (Book b in Model.Books)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @b.Title
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>@b.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">
            <ul style="list-style-type:none;">
                <li>Written by @b.Author</li>
                <li>Published by @b.Publisher</li>
                <li>ISBN: @b.Isbn</li>
                <li>@b.Classification</li>
                <li>@b.Category</li>
                <li>@b.PageCount pages</li>
            </ul>
        </div>
    </div>
}

<div page-model="@Model.PageInfo" page-action="Index" page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group pull-right m-1">

</div>

